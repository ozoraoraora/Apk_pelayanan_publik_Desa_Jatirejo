<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengajuan_tender"
    android:id="@+id/pengajuanTender">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@color/black"
        app:titleTextColor="@color/black" />

    <TextView
        android:id="@+id/txt_wajib_isi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="*Wajib diisi"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_upload_ktp"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_wajib_isi">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:background="@color/light_green"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_upload_ktp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/poppins_bold"
                android:text="+Upload Fotao KTP"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/img_view_uplod_ktp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/txt_upload_ktp"
                android:layout_alignBottom="@+id/txt_upload_ktp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/icons_import_pdf"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_upload_file_tender"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_upload_ktp">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:background="@color/light_green"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_upload_file_tender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/poppins_bold"
                android:text="+Upload file tender"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/img_view_uplod_file_tender"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/txt_upload_file_tender"
                android:layout_alignBottom="@+id/txt_upload_file_tender"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/icons_import_pdf"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_tdk_wajib_isi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="* Tidak wajib diisi"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_upload_file_tender" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_upload_video_presentasi"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tdk_wajib_isi">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:background="@color/light_green"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_upload_video_presentasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/poppins_bold"
                android:text="+Upload video presentasi"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/img_view_uplod_video_presentasi"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/txt_upload_video_presentasi"
                android:layout_alignBottom="@+id/txt_upload_video_presentasi"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/icons_import_pdf"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_ajukan_sk_tidak_mampu"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_rounded_p_surat"
        android:drawableRight="@drawable/ic_panah"
        android:fontFamily="@font/poppins_medium"
        android:padding="15dp"
        android:text="KIRIM"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_upload_video_presentasi" />


</androidx.constraintlayout.widget.ConstraintLayout>