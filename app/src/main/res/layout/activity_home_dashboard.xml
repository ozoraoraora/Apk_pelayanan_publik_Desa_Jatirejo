<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dash_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".home_dashboard"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:subtitleTextColor="@color/black"
            app:titleTextColor="@color/black"
            app:menu="@menu/toolbar_menu"/>

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="100dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@anim/slide_in_left"
            android:outAnimation="@anim/slide_out_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.007">

            <ImageView
                android:id="@+id/img_slide_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007"
                app:srcCompat="@drawable/kantor_desa" />

            <ImageView
                android:id="@+id/img_slide_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007"
                app:srcCompat="@drawable/mesjid_al_ikhlas" />

            <ImageView
                android:id="@+id/img_slide_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007"
                app:srcCompat="@drawable/sd" />

            <ImageView
                android:id="@+id/img_slide_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007"
                app:srcCompat="@drawable/tk" />

            <ImageView
                android:id="@+id/img_slide_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007"
                app:srcCompat="@drawable/tpa" />

        </ViewFlipper>

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_berita"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cw_profil_desa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewFlipper">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="103dp"
                android:layout_height="103dp">

                <ImageView
                    android:id="@+id/img_berita"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/berita"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.478"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_berita"
                    android:layout_width="87dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Berita"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_marginBaseline="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_profil_desa"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cw_tender"
            app:layout_constraintStart_toEndOf="@+id/cw_berita"
            app:layout_constraintTop_toBottomOf="@+id/viewFlipper">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="103dp"
                android:layout_height="103dp">

                <ImageView
                    android:id="@+id/img_profil_desa"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/profil_desa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.478"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_profil_desa"
                    android:layout_width="87dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Profil Desa"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_marginBaseline="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_tender"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cw_profil_desa"
            app:layout_constraintTop_toBottomOf="@+id/viewFlipper">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="103dp"
                android:layout_height="103dp">

                <ImageView
                    android:id="@+id/img_tender"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/tender"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.478"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_tender"
                    android:layout_width="87dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Tender"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_marginBaseline="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cw_pengurusan_surat"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="200dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cw_keuangan_desa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cw_berita">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="103dp"
                android:layout_height="103dp">

                <ImageView
                    android:id="@+id/img_pengurusan_surat"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:src="@drawable/surat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.478"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_pengurusan_surat"
                    android:layout_width="87dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pengurusan Surat"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_marginBaseline="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_keuangan_desa"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="200dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cw_saran_masukan"
            app:layout_constraintStart_toEndOf="@+id/cw_pengurusan_surat"
            app:layout_constraintTop_toBottomOf="@+id/cw_profil_desa">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="103dp"
                android:layout_height="103dp">

                <ImageView
                    android:id="@+id/img_keuangan_desa"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:src="@drawable/money_village"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.478"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_keuangan_desa"
                    android:layout_width="88dp"
                    android:layout_height="37dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Keuangan Desa"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.466"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_marginBaseline="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_saran_masukan"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="200dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cw_keuangan_desa"
            app:layout_constraintTop_toBottomOf="@+id/cw_tender">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="103dp"
                android:layout_height="103dp">

                <ImageView
                    android:id="@+id/img_saran_masukan"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:src="@drawable/saran_masukan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.478"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_saran_masukan"
                    android:layout_width="85dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Saran dan Masukan"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_marginBaseline="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
